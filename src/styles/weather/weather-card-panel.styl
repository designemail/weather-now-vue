@require '../_mixins'

.weather-card-panel-container
  position absolute
  top 50%
  width 100%
  transform('translate(0,-50%)')

.weather-card-panel
  display flex
  align-items center
  justify-content center
  .weather-card
    & + .weather-card
      margin 0 0 0 50px
  .weather-card
    width 250px

+breakpoint('xs')
  .weather-card-panel-container
    position relative
    top 0
    transform('translate(0,0)')

  .weather-card-panel
    flex-direction column
    .weather-card
      & + .weather-card
        margin 0
    .weather-card:nth-child(2)
      order 0
    .weather-card:nth-child(1)
      order 1
    .weather-card:nth-child(3)
      order 2
    .weather-card:nth-child(1)
    .weather-card:nth-child(3)
      margin 30px 0 0
